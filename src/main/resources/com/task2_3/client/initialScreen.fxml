<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="520.0" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.task2_3.client.InitialScreenController">
   <children>
      <ImageView fitHeight="163.0" fitWidth="240.0">
         <image>
            <Image url="@../../../../../../../../Desktop/logo.jpg" />
         </image>
         <VBox.margin>
            <Insets bottom="100.0" />
         </VBox.margin>
      </ImageView>

      <Button fx:id="accessButton" alignment="CENTER" onAction="#switchToOverallStats" prefHeight="43.0" prefWidth="202.0" style="-fx-background-color: grey;" text="ACCESS " textFill="WHITE">
         <font>
            <Font name="Aharoni Bold" size="22.0" />
         </font>
      </Button>
      <Button fx:id="reservedAreaButton" onAction="#switchToAdminAuthentication" prefHeight="43.0" prefWidth="202.0" style="-fx-background-color: gray;" text="RESERVED AREA " textFill="WHITE">
         <font>
            <Font name="Aharoni Bold" size="22.0" />
         </font>
      </Button>
      <ImageView fitHeight="69.0" fitWidth="71.0">
         <image>
            <Image url="@../../../Images/icons8-airplane-mode-on-64.png" />
         </image>
      </ImageView>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
