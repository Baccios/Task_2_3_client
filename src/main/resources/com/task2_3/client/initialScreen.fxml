<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="520.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.task2_3.client.InitialScreenController">
   <children>
      <Label alignment="CENTER" prefHeight="53.0" prefWidth="459.0" text="AIR BOOKING ASSISTANT">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="200.0" />
         </VBox.margin>
      </Label>

      <Button fx:id="accessButton" alignment="CENTER" onAction="#switchToOverallStats" prefHeight="43.0" prefWidth="202.0" text="ACCESS ">
         <font>
            <Font name="Aharoni Bold" size="22.0" />
         </font>
      </Button>
      <Button fx:id="reservedAreaButton" onAction="#switchToAdminAuthentication" prefHeight="43.0" prefWidth="202.0" text="RESERVED AREA ">
         <font>
            <Font name="Aharoni Bold" size="22.0" />
         </font>
      </Button>
      <ImageView fitHeight="69.0" fitWidth="71.0">
         <image>
            <Image url="@../../../Images/icons8-airplane-mode-on-64.png" />
         </image>
      </ImageView>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
